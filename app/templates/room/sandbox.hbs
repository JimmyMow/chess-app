<div class="board-outter-container outter-container">
  <div class="board-inner-container">
    {{canvas-diagram}}
    {{chess-board action='sendPosition' board=controller.boardObject game=controller.gameObject}}
  </div>
  <div class="other-outter-container outter-container">
    <button {{action 'start'}}>Restart Game</button>
    {{#if diagramMode}}
      <button {{action 'canvas'}}>Turn off diagram mode</button>
      <button {{action 'clearCanvas'}}>Clear diagram</button>
    {{else}}
      <button {{action 'canvas'}}>Turn on diagram mode</button>
    {{/if}}
    <div>
      <strong>FEN</strong>
      <input readonly="true" class="fen">
    </div>
    <p>
      <label>Score:</label>
      <span id="score" class="engine-data"></span>
    </p>
    <p>
      <label>Best move: </label>
      <span id="bestmove" class="engine-data"></span>
    </p>
    <p>
      <label>Variation: </label>
      <span id="variation" class="engine-data"></span>
    </p>
    <p>
      <label>Depth: </label>
      <span id="depth" class="engine-data"></span>
    </p>
  </div>
</div>
